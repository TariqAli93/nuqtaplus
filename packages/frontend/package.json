{
  "name": "@codelims/frontend",
  "version": "1.0.0",
  "description": "CodeLIMS Frontend - Electron + Vue 3 + Vuetify",
  "main": "dist-electron/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "preview": "vite preview",
    "electron:dev": "concurrently pnpm:dev && wait-on http://localhost:5173 && electron .",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@tailwindcss/vite": "^4.1.16",
    "axios": "^1.7.9",
    "pinia": "^2.2.8",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-to-print": "^1.5.1",
    "vuetify": "^3.7.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.21",
    "chart.js": "^4.5.1",
    "concurrently": "^9.1.2",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "^26.0.12",
    "postcss": "^8.5.6",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.16",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-vuetify": "^2.0.4",
    "vue-chartjs": "^5.3.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.codelims.app",
    "productName": "CodeLIMS",
    "files": [
      "package.json",
      "dist-electron/**/*",
      "node_modules/**/*",
      "backend/**/*"
    ],
    "extraResources": [
      {
        "from": "../../dist-backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "dist-electron",
        "to": "dist-electron",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "../../release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
